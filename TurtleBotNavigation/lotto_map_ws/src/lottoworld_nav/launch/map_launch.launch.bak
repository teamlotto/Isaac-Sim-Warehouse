<launch>
  <param name="use_sim_time" value="true" />  

  <!-- 맵파일 경로 -->
  <arg name="map_file" default="$(find lottoworld_nav)/map/Raw_Lotto_Stage_TurtleBot3_CAM_Lidar.yaml"/>

  <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)" respawn="true" />

  <!--- Run AMCL -->
    <include file="$(find amcl)/examples/amcl_diff.launch" />

    <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
        <rosparam file="$(find lottoworld_nav)/params/costmap_common_params.yaml" command="load" ns="global_costmap" />
        <rosparam file="$(find lottoworld_nav)/params/costmap_common_params.yaml" command="load" ns="local_costmap" />
        <rosparam file="$(find lottoworld_nav)/params/local_costmap_params.yaml" command="load" />
        <rosparam file="$(find lottoworld_nav)/params/global_costmap_params.yaml" command="load" />
        <rosparam file="$(find lottoworld_nav)/params/base_local_planner_params.yaml" command="load" />
    </node>
</launch>
